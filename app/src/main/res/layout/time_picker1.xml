<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:background="@drawable/besstoo_poup"
        >

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radiogrp1"
            android:layout_below="@+id/today"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.30 pm-2.00 pm"
                android:textColor="@android:color/black"
                android:id="@+id/rb_boy"
                android:buttonTint="@color/red"
                android:checked="false"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.30 pm-3.00 pm"
                android:textColor="@android:color/black"
                android:id="@+id/rb_girl"
                android:checked="false"
                android:buttonTint="@color/red"
                />

           <!-- <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rd_boy1"
                android:buttonTint="@color/red"
                android:textColor="@android:color/black"
                android:text="8.30 pm -9.15 pm"
                android:checked="false"
                />-->
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radiogrp1"
            android:layout_centerHorizontal="true"
            android:id="@+id/number_of_people"
            android:text="Specify Number of Person"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            />
        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/edt_number"
            android:textAlignment="center"
            android:layout_below="@+id/number_of_people"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit_design"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="Select a date"
            android:id="@+id/select_date"
            android:layout_below="@+id/edt_number"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_date"
            android:layout_centerHorizontal="true"
            android:id="@+id/date"
            android:inputType="none"
            android:textIsSelectable="true"
            android:background="@drawable/edit_rect"
            android:drawableRight="@drawable/calender"
            android:layout_marginTop="5dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_sub"
            android:background="@drawable/besstoo_proceed"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            />
    </RelativeLayout>

</LinearLayout>
