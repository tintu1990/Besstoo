        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seventh_r"
            android:layout_below="@+id/fifth_r"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/privacy"
                android:layout_marginTop="10dp"
                android:src="@drawable/shield"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Privacy Policy"
                android:layout_marginRight="10dp"
                android:id="@+id/txt_privacy"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/privacy"
                android:src="@drawable/dotted"
                android:layout_marginTop="5dp"
                android:layerType="software"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eighth_r"
            android:layout_below="@+id/seventh_r"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/Quality"
                android:layout_marginTop="10dp"
                android:src="@drawable/quality"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Quality Policy"
                android:layout_marginRight="10dp"
                android:id="@+id/txt_quality"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/Quality"
                android:src="@drawable/dotted"
                android:layout_marginTop="5dp"
                android:layerType="software"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ninth_r"
            android:layout_below="@+id/eighth_r"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/terms"
                android:layout_marginTop="10dp"
                android:src="@drawable/terms"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Terms  Conditions"
                android:layout_marginRight="10dp"
                android:id="@+id/txt_terms"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/terms"
                android:src="@drawable/dotted"
                android:layout_marginTop="5dp"
                android:layerType="software"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sixth_r"
            android:id="@+id/tenth_r"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/version"
                android:layout_marginTop="10dp"
                android:src="@drawable/besstoo_version"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Version:1.0.3"
                android:layout_marginRight="10dp"
                android:id="@+id/txt_version"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/version"
                android:src="@drawable/dotted"
                android:layout_marginTop="5dp"
                android:layerType="software"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
