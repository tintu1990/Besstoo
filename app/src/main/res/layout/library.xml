<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:id="@+id/slide_menu_layout1"
    android:layout_marginLeft="170dp"
    android:layout_marginStart="170dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/first_r"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/profile"
            android:layout_marginTop="10dp"
            android:src="@drawable/home1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:text="Login"
           android:id="@+id/lib_login"
           android:textAppearance="?android:attr/textAppearanceSmall"
           android:textColor="@android:color/white"
           android:layout_alignParentRight="true"
           android:layout_marginRight="10dp"
           android:layout_marginTop="10dp"
           />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/profile"
                android:src="@drawable/dotted"
                android:layout_marginTop="5dp"
                android:layerType="software"
                />
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/second_r"
        android:layout_below="@+id/first_r"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/refer"
            android:layout_marginTop="10dp"
            android:src="@drawable/ruppee1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_centerVertical="true"
            android:text="Offer"
            android:textColor="@android:color/white"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/refer"
            android:src="@drawable/dotted"
            android:layout_marginTop="5dp"
            android:layerType="software"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/third_r"
        android:layout_below="@+id/second_r"
        android:layout_marginBottom="5dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/orders"
            android:layout_marginTop="10dp"
            android:src="@drawable/cl1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text=" My Orders"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/orders"
            android:src="@drawable/dotted"
            android:layout_marginTop="5dp"
            android:layerType="software"
            />
    </RelativeLayout>
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fourth_r"
            android:visibility="gone"
        android:layout_below="@+id/third_r"
        android:layout_marginBottom="5dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/notification"
            android:layout_marginTop="10dp"
            android:src="@drawable/notification1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text=" My Notifications"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/notification"
            android:src="@drawable/dotted"
            android:layout_marginTop="5dp"
            android:layerType="software"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fifth_r"
        android:layout_below="@+id/fourth_r"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/about"
            android:layout_marginTop="10dp"
            android:src="@drawable/about1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="About Us"
            android:layout_marginRight="10dp"
            android:id="@+id/txt_about_us"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/about"
            android:src="@drawable/dotted"
            android:layout_marginTop="5dp"
            android:layerType="software"
            />

    </RelativeLayout>



